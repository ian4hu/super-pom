<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.gitee.ian4hu</groupId>
  <artifactId>super-pom</artifactId>
  <version>1.0.1</version>
  <packaging>pom</packaging>
  <name>Super POM</name>
  <description>A pre-configured pom can be a parent of new project to make your build stable. enforced by
		maven-enforcer-plugin.</description>
  <url>http://www.dexcoder.com/</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>Ian Hu</name>
      <email>hu2008yinxiang@163.com</email>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git@gitee.com:ian4hu/super-pom.git</connection>
    <developerConnection>scm:git:git@gitee.com:ian4hu/super-pom.git</developerConnection>
    <url>git@gitee.com:ian4hu/super-pom.git</url>
  </scm>
  <properties>
    <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
    <enforcer.fail>true</enforcer.fail>
    <file.encoding>utf-8</file.encoding>
    <encoding>utf-8</encoding>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>public</id>
      <name>public repository</name>
      <url>http://maven.qima-inc.com/content/groups/public/</url>
    </repository>
    <repository>
      <id>releases</id>
      <name>Nexus Release Repository</name>
      <url>http://maven.qima-inc.com/content/repositories/releases/</url>
    </repository>
    <repository>
      <id>snapshots</id>
      <name>Nexus Snapshot Repository</name>
      <url>http://maven.qima-inc.com/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>public</id>
      <name>public repository</name>
      <url>http://maven.qima-inc.com/content/groups/public/</url>
    </pluginRepository>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/Users/hujixu/Documents/code/super-pom/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>super-pom-1.0.1</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0-M2</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <id>default-enforcer</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <banDuplicatePomDependencyVersions />
                <dependencyConvergence />
                <reactorModuleConvergence>
                  <message>[WARNING][Enforcer] 多模块项目子模块需要保持版本号相同（建议不要显式设置子模块版本号，从parent继承）</message>
                </reactorModuleConvergence>
                <banDependencies />
                <evaluateBeanshell>
                  <condition>"${encoding}".toLowerCase().equals("utf-8")</condition>
                  <message>[WARNING][Enforcer] 请使用utf-8编码:&lt;encoding>utf-8&lt;encoding></message>
                </evaluateBeanshell>
                <evaluateBeanshell>
                  <condition>"${file.encoding}".equals("${encoding}")</condition>
                  <message>[WARNING][Enforcer] 请不要单独配置&lt;file.encoding>，只需要配置&lt;encoding>utf-8&lt;encoding></message>
                </evaluateBeanshell>
              </rules>
            </configuration>
          </execution>
          <execution>
            <id>blacklist-struts-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <bannedDependencies>
                  <searchTransitive>true</searchTransitive>
                  <excludes>
                    <exclude>org.apache.struts:*:[2.1.1,2.5.14.1]</exclude>
                  </excludes>
                  <message>[WARNING][Enforcer] Struts [2.1.1,2.5.14.1] is banned for security issue https://cwiki.apache.org/confluence/display/WW/S2-056</message>
                </bannedDependencies>
              </rules>
            </configuration>
          </execution>
          <execution>
            <id>force-guava-versions</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <bannedDependencies>
                  <searchTransitive>true</searchTransitive>
                  <excludes>
                    <exclude>com.google.guava:guava:*</exclude>
                  </excludes>
                  <includes>
                    <include>com.google.guava:guava:19.0</include>
                  </includes>
                  <message>[WARNING][Enforcer] Only Guava 19.0 allowed</message>
                </bannedDependencies>
              </rules>
            </configuration>
          </execution>
          <execution>
            <id>duplicate-class</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <banDuplicateClasses>
                  <ignoreClasses>
                    <ignoreClass>*.R</ignoreClass>
                    <ignoreClass>org.apache.commons.logging.*</ignoreClass>
                  </ignoreClasses>
                  <findAllDuplicates>true</findAllDuplicates>
                </banDuplicateClasses>
              </rules>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>extra-enforcer-rules</artifactId>
            <version>1.0-beta-7</version>
          </dependency>
          <dependency>
            <groupId>de.skuzzle.enforcer</groupId>
            <artifactId>restrict-imports-enforcer-rule</artifactId>
            <version>0.9.0</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>net.ossindex</groupId>
        <artifactId>ossindex-maven-plugin</artifactId>
        <version>2.3.7</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <id>default-audit</id>
            <phase>validate</phase>
            <goals>
              <goal>audit</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <failOnError>${enforcer.fail}</failOnError>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <extensions>false</extensions>
        <configuration>
          <tagNameFormat>@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
